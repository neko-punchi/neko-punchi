<h1>問題編集</h1>
<% @quiz_data.each do |quiz| %>
    <%= form_tag("/quizzes_list/update") do %>
      <%= hidden_field_tag 'quiz_id', quiz.id %>
        <div class="quiz_edit_table">
        <div class="quiz_edit_t1">ID</div>
        <div class="quiz_edit_c1"><%= quiz.id %></div><br>
        <div class="quiz_edit_t1">category</div>
        <div class="quiz_edit_c1"><%= select_tag :category, options_from_collection_for_select(Category.all, "id", "category") %></div><br>
        <div class="quiz_edit_t1">sub_category</div>
        <div class="quiz_edit_c1"><%= select_tag :sub_category, options_from_collection_for_select(SubCategory.all, "id", "sub_category") %></div><br>
        <div class="quiz_edit_t2">text</div>
        <div class="quiz_edit_c2"><%= text_area_tag :text, quiz.text, :size => "50x3" %></div><br>
        <div class="quiz_edit_t2">sub_text</div>
        <div class="quiz_edit_c2"><%= text_area_tag :sub_text, quiz.sub_text, :size => "50x3" %></div><br>
        <div class="quiz_edit_t2">choose</div>
        <div class="quiz_edit_c2"><%= text_area_tag :choose, quiz.choose, :size => "50x3"%></div><br>
        <div class="quiz_edit_t2">answer</div>
        <div class="quiz_edit_c2"><%= text_field_tag :answer, quiz.answer, :size => "50x3"%></div><br>
        <div class="quiz_edit_t2">hint</div>
        <div class="quiz_edit_c2"><%= text_area_tag :hint, quiz.hint, :size => "50x3"%></div><br>
        <div class="quiz_edit_submit"><%= submit_tag "変更", :class => "quiz_edit_submit"  %></div><br>
      <% end %>
    <% end %>
  </div>
<div style=" clear: both;"/>
