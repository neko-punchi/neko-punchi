
<div id='exam-contents'>
  <div id='exam-pre'>
    <h1>試験</h1>
    <%= link_to('スタート', {:action => 'show'},
       :id => 'start-link',
       :remote => true)
     %>
  </div>

  <div id='exam-question'>
      <h1 id='exam-number'>問題nn</h1>
      <p id="exam-text"></p>
      <%= form_tag(url_for(:action=>'answer'), :remote=>true) do %>
        <div id='exam-answer'>
        </div>
      <% end %>
  </div>

  <% @objlist.each do |quiz| %>
    <div class="exam_box" style="float:left">
      <% title = sprintf("問題 %02d", quiz.id) %>
      <% quiz_number = sprintf("quiz_%02d", quiz.id) %>
      <label  class='exam_button' value="<%= quiz_number %>"><%= title %></label>
      <div id="<%= quiz_number %>" class="dialog-modal" title="<%= title %>">
        <label><%= quiz.text %></label>
        <label class='sexam_button'><%= quiz.text %></label>
      </div>
    </div>
  <% end %>
  <div style=" clear: both;"/>
</div>
