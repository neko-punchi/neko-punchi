
<div id='exam-contents'>

  <h1>試験</h1>

  <!-- 問題一覧 -->
  <% @objlist.each do |quiz| %>
    <div class="exam_box" style="float:left">
      
      <% title = sprintf("問題 %02d", quiz.id) %>
      <% quiz_number = sprintf("quiz_%02d", quiz.id) %>

      <!-- 問題ボタン -->
      <label  class='exam_button' value="<%= quiz_number %>"><%= title %></label>

      <!--ダイアログ -->
      <div id="<%= quiz_number %>" class="dialog-modal" title="<%= title %>">
        <%= form_tag :action=>:answer, :method=>:put, :remote=>false do %>
            <!-- 問題文 -->
            <p><%= quiz.text %></p>
            <input name="quiz_id" type="hidden" value="<%=quiz.id%>" />
            <%= hidden_field_tag :quiz_id, quiz.id %>
            <% if quiz.choose != nil then %>
                <!-- 回答選択ボタン -->
                <% lists = quiz.choose.split(',') %>
                <% lists.each do |item| %>
                    <label class='submit_button'><%= item %></label>
                <% end %>
            <% else  %>
                <!-- 回答入力フィールド -->
                <%= text_field_tag 'answer' ,'', :size => 20 %> 
                <label class='submit_button'>answer</label>
            <% end %>
        <% end %>
      </div><!--End of div class(dialog-model) -->
    </div><!-- End of div class(exam_box) -->
  <% end %>

  <div style=" clear: both;"/>
</div>
